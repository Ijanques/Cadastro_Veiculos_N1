@model CidadeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Cidade</h2>
<form action="save" method="post" class="col-md-6">

    <input type="hidden" value="@ViewBag.Operacao" name="Operacao" />

    <label for="Id" class="control-label">Código da cidade</label>

    @if (ViewBag.Operacao == "I")
    {
        <input type="number" Name="Id" value="@Model.Id" class="form-control" />
    }
    else
    {
        <input type="number" Name="Id" value="@Model.Id" readonly class="form-control" />
    }
    <span asp-validation-for="Id" class="text-danger"></span>


    <br />
    <label for="Nome" class="control-label">Nome da cidade</label>
    <input type="text" class="form-control" Name="Nome" value="@Model.Nome" />
    <span asp-validation-for="Nome" class="text-danger"></span>
    <br />

    <input type="submit" class="btn btn-info" value="Salvar dados" />
    <br />
</form>
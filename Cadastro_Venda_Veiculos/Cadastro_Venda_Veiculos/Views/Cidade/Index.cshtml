@model List<CidadeViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Listagem de Cidades</h2>

<a href="/cidade/create" class="btn btn-info">Novo Registro</a>
<br />

<table class="table table-responsive table-hover">
    <tr>
        <th>Ações</th>
        <th>Código</th>
        <th>Nome</th>
    </tr>
    @foreach (var cidade in Model)
    {
        <tr>
            <td>
                <a href="/cidade/edit?id=@cidade.Id" class="btn btn-info">Editar</a>
                &nbsp;&nbsp;&nbsp;
                <a href="javascript:confirma(@cidade.Id)" class="btn btn-danger">Apagar</a>
            </td>
            <td>@cidade.Id</td>
            <td>@cidade.Nome</td>
        </tr>
    }
</table>

<script>
    function confirma(id) {
        if (confirm('Deseja mesmo apagar?')) {
            location.href = '/cidade/delete?id=' + id;
        }
    }
</script>
@model VendedorViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Vendedor</h2>
<form action="Salvar" method="post">
    <label for="Id" class="control-label">ID</label>
    <input type="number" Name="Id" value="@Model.Id" />
    <br />
    <label for="Nome" class="control-label">Nome do Vendedor</label>
    <input type="text" Name="Nome" value="@Model.Nome" />
    <br />
    <label for="Telefone" class="control-label">Telefone</label>
    <input type="text" Name="Telefone" value="@Model.Telefone" />
    <br />
    <label for="Vendas" class="control-label">Vendas</label>
    <input type="date" Name="Vendas" value="@Model.Vendas" />
    <br />
    <input type="submit" value="Salvar dados" />
    <br />

    @* tópico 22 e 24 do rosalém *@
    <div class="row">
        <div class="col-md-4">
            <form action="Salvar" method="post">
                <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
                <label for="Id" class="control-label">ID</label>
                @if (ViewBag.Operacao == "I")
                {
                    <input asp-for="Id" class="form-control" />
                }
                else
                {
                    <input asp-for="Id" class="form-control" readonly />
                }
                <span asp-validation-for="Id" class="text-danger"></span>
                <br />
                <label for="Nome" class="control-label">Nome do Vendedor</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
                <br />
                <label for="Telefone" class="control-label">Telefone</label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
                <br />
                <label for="Vendas" class="control-label">Vendas</label>
                <input asp-for="Vendas" class="form-control" />
                <span asp-validation-for="Vendas" class="text-danger"></span>
                <br />
                <input type="submit" value="Salvar dados" />
                &nbsp;
                <a href="/aluno/index" class="btn btn-light">Voltar</a>
                <br />
            </form>
        </div>
    </div>

</form>

